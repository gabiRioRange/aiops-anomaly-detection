# Configurações da Aplicação
APP_NAME=AIOps Anomaly Detection
APP_VERSION=0.1.0
DEBUG=false

# Banco de Dados
DATABASE_URL=sqlite+aiosqlite:///./data/anomalies.db
# Para PostgreSQL: postgresql+asyncpg://user:password@localhost/aiops

# Configurações de Detecção
SENSITIVITY_LOW=0.01
SENSITIVITY_MEDIUM=0.05
SENSITIVITY_HIGH=0.1
DEFAULT_CONTAMINATION=0.05

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aiops.log

# CORS (para desenvolvimento)
ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8080"]